IRC_VERSIONS = %w|6.8.0.beta.97.da30a7c 6.8.0.beta.63.67d2581|

IRC_VERSIONS.each do |version|
  appraise "infopark_rails_connector-#{version}" do
    gem "infopark_rails_connector", "#{version}"
    gem "rails", "3.0.19"
  end
end

